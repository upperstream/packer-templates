{
  "variables": {
    "variant": "dwm",
    "cpu": "",
    "box_version": "6.1.0",
    "iso_image": "",
    "os_ver": "6.1",
    "mem_size": "1024",
    "disk_size": "40960",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}",
    "root_password": "vagrant",
    "vagrant_username": "vagrant",
    "vagrant_password": "vagrant",
    "package_server": "http://www.ftp.ne.jp/OpenBSD/"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "30s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `virtualbox_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/{{user `cpu`}}/{{user `iso_image`}}",
        "iso/{{user `iso_image`}}",
        "http://ftp.jaist.ac.jp/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}",
        "http://ftp.kddilabs.jp/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}",
        "http://www.ftp.ne.jp/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "guest_additions_mode": "disable",
      "http_directory": ".",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "12" ]
      ],
      "boot_command": [
        "a<enter><wait>",
        "<wait10>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.conf<enter><wait>",
        "<wait5>",
        "i<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "50s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "guest_os_type": "{{user `vmware_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/{{user `cpu`}}/{{user `iso_image`}}",
        "iso/{{user `iso_image`}}",
        "http://ftp.jaist.ac.jp/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}",
        "http://ftp.kddilabs.jp/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}",
        "http://www.ftp.ne.jp/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "http_directory": ".",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}",
      "vmx_data": {
        "numvcpus": "2",
        "memsize": "{{user `mem_size`}}",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "nat",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE",
        "svga.vramSize": "12582912"
      },
      "boot_command": [
        "a<enter><wait>",
        "<wait10>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.conf<enter><wait>",
        "<wait5>",
        "i<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "name": "esxi-iso",
      "boot_wait": "50s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "guest_os_type": "{{user `vmware_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/{{user `cpu`}}/{{user `iso_image`}}",
        "iso/{{user `iso_image`}}",
        "http://ftp.jaist.ac.jp/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}",
        "http://ftp.kddilabs.jp/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}",
        "http://www.ftp.ne.jp/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "http_directory": ".",
      "output_directory": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "vmx_data": {
        "numvcpus": "2",
        "memsize": "{{user `mem_size`}}",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "bridged",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE",
        "svga.vramSize": "12582912"
      },
      "boot_command": [
        "a<enter><wait>",
        "<wait10>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.conf<enter><wait>",
        "<wait5>",
        "i<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "only": ["virtualbox-iso", "vmware-iso"],
      "scripts": [
        "../provisioners/vagrant-6.sh",
        "../provisioners/sudo-6.sh",
        "../provisioners/x11.sh",
        "../provisioners/dwm+dmenu+st.sh",
        "../provisioners/disk_cleanup.sh",
        "../provisioners/cleanup.sh"
      ],
      "environment_vars": [
        "PKG_PATH={{user `package_server`}}/{{user `os_ver`}}/packages/{{user `cpu`}}",
        "VAGRANT_USER={{user `vagrant_username`}}",
        "VAGRANT_GROUP={{user `vagrant_username`}}",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}",
        "SUDO=1.8.19.2",
        "SLIM=1.3.6p13",
        "SLIM_THEMES=1.2.3p6",
	"DWM=6.1p0",
	"DMENU=4.6",
	"ST=0.7"
      ]
    },
    {
      "type": "shell",
      "only": ["esxi-iso"],
      "scripts": [
        "../provisioners/vagrant-6.sh",
        "../provisioners/sudo-6.sh",
        "../provisioners/x11.sh",
        "../provisioners/dwm+dmenu+st.sh",
        "../provisioners/cleanup.sh"
      ],
      "environment_vars": [
        "PKG_PATH={{user `package_server`}}/{{user `os_ver`}}/packages/{{user `cpu`}}",
        "VAGRANT_USER={{user `vagrant_username`}}",
        "VAGRANT_GROUP={{user `vagrant_username`}}",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}",
        "SUDO=1.8.19.2",
        "SLIM=1.3.6p13",
        "SLIM_THEMES=1.2.3p6",
	"DWM=6.1p0",
	"DMENU=4.6",
	"ST=0.7"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso", "vmware-iso"],
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-{{ .Provider }}.box",
      "override": {
        "virtualbox": {
          "vagrantfile_template": "../vagrantfiles/Vagrantfile.OpenBSD"
        }
      }
    }
  ]
}
