{
  "variables": {
    "iso_image": "cd58.iso",
    "iso_checksum": "c2b6d8879d014ef2f568464d9ff969e80a8a558a9c13b0862ce5d5bdd07b47a6",
    "os_ver": "5.8",
    "box_version": "1.1"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "i<enter><wait>",
        "default<enter><wait>",
        "foo<enter><wait>",
        "em0<enter><wait>",
        "dhcp<enter><wait>",
        "none<enter><wait>",
        "done<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "yes<enter><wait>",
        "no<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "no<enter><wait>",
        "UTC<enter><wait>",
        "wd0<enter><wait>",
        "whole<enter><wait>",
        "a<enter><wait>",
        "<wait10>",
        "http<enter><wait>",
        "none<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "-x*<enter><wait>",
        "-game*<enter><wait>",
        "done<enter><wait>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10>",
        "done<enter><wait>",
        "yes<enter><wait>",
        "ftp -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait>",
        "sh /tmp/install.sh<enter><wait>",
        "reboot<enter>"
      ],
      "boot_wait": "30s",
      "disk_size": 10240,
      "guest_os_type": "OpenBSD",
      "http_directory": "../http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/{{user `iso_image`}}",
        "http://www.ftp.ne.jp/OpenBSD/{{user `os_ver`}}/i386/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "guest_additions_mode": "disable",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "1024"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/rsync.sh",
        "../provisioners/sharity-light.sh",
        "../provisioners/vagrant-doas.sh",
        "../provisioners/cleanup.sh"
      ],
      "environment_vars": [
        "PKG_PATH=http://www.ftp.ne.jp/OpenBSD/{{user `os_ver`}}/packages/i386/"
      ]
    }
  ],
  "post-processors": [
    {
      "output": "./OpenBSD-{{user `os_ver`}}-i386-v{{user `box_version`}}.box",
      "type": "vagrant",
      "override": {
        "virtualbox": {
          "vagrantfile_template": "../vagrantfiles/Vagrantfile.OpenBSD-doas"
        }
      }
    }
  ]
}
