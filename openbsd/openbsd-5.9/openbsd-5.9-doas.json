{
  "variables": {
    "variant": "doas",
    "box_version": "5.9.2",
    "iso_image": "cd59.iso",
    "os_ver": "5.9",
    "mem_size": "512",
    "disk_size": "40960",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}",
    "root_password": "vagrant",
    "vagrant_username": "vagrant",
    "vagrant_password": "vagrant",
    "vagrant_fullname": "vagrant"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "30s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `virtualbox_guest_os_type`}}",
      "http_directory": "../http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/{{user `iso_image`}}",
        "http://www.ftp.ne.jp/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "guest_additions_mode": "disable",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ]
      ],
      "boot_command": [
        "i<enter><wait>",
        "default<enter><wait>",
        "foo<enter><wait>",
        "em0<enter><wait>",
        "dhcp<enter><wait>",
        "<wait10>",
        "none<enter><wait>",
        "done<enter><wait>",
        "{{user `root_password`}}<enter><wait>",
        "{{user `root_password`}}<enter><wait>",
        "yes<enter><wait>",
        "no<enter><wait>",
        "{{user `vagrant_username`}}<enter><wait>",
        "{{user `vagrant_fullname`}}<enter><wait>",
        "{{user `vagrant_password`}}<enter><wait>",
        "{{user `vagrant_password`}}<enter><wait>",
        "no<enter><wait>",
        "UTC<enter><wait>",
        "wd0<enter><wait>",
        "whole<enter><wait>",
        "a<enter><wait>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "http<enter><wait>",
        "none<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "-c*<enter><wait>",
        "-x*<enter><wait>",
        "-game*<enter><wait>",
        "done<enter><wait>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "<wait10><wait10><wait10><wait10><wait10><wait10>",
        "done<enter><wait5>",
        "UTC<enter><wait>",
        "ftp -o /tmp/install.sh http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh<enter><wait>",
        "sh /tmp/install.sh<enter><wait>",
        "reboot<enter>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "50s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "guest_os_type": "{{user `vmware_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_urls": [
        "iso/{{user `iso_image`}}",
        "http://www.ftp.ne.jp/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "http_directory": "../http",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}",
      "vmx_data": {
        "numvcpus": "2",
        "memsize": "{{user `mem_size`}}",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "nat",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE"
      },
      "boot_command": [
        "i<enter><wait>",
        "default<enter><wait>",
        "foo<enter><wait>",
        "em0<enter><wait>",
        "dhcp<enter><wait>",
        "<wait10>",
        "none<enter><wait>",
        "done<enter><wait>",
        "{{user `root_password`}}<enter><wait>",
        "{{user `root_password`}}<enter><wait>",
        "yes<enter><wait>",
        "no<enter><wait>",
        "no<enter><wait>",
        "{{user `vagrant_username`}}<enter><wait>",
        "{{user `vagrant_fullname`}}<enter><wait>",
        "{{user `vagrant_password`}}<enter><wait>",
