{
  "variables": {
    "vm_name": "Debian-9-amd64-dwm",
    "mem_size": "1024",
    "disk_size": "51200",
    "iso_name": "mini.iso",
    "iso_path": "dists/Debian9.1/main/installer-amd64/20170615+deb9u1/images/netboot",
    "iso_checksum": "7fd16ec981a97f5cd31cffee317e3ff149c7d2cbbc8d93010eee542fd86b27f7",
    "iso_checksum_type": "sha256",
    "ssh_name": "root",
    "ssh_pass": "vagrant",
    "root_password": "vagrant",
    "vagrant_username": "vagrant",
    "vagrant_password": "vagrant",
    "box_version": "9.1.20170722",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}",
    "headless": "false",
    "virtualbox_version": "5.0.36"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "Debian_64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://debian-cd.debian.net/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.riken.jp/Linux/debian/debian/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.jp.debian.org/debian/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.jaist.ac.jp/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/cdimage/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/cdimage/archive/{{user `iso_path`}}/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": ".vbox_version",
      "output_directory": "output/{{user `vm_name`}}-v{{user `box_version`}}-virtualbox",
      "vm_name": "{{user `vm_name`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ],
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "32" ]
      ],
      "http_directory": "../http",
      "headless": "{{user `headless`}}",
      "boot_command": [
        "<esc><wait>auto priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-stretch.cfg <wait>",
        "passwd/root-password={{user `root_password`}} <wait>",
        "passwd/root-password-again={{user `root_password`}} <wait>",
        "passwd/user-fullname={{user `vagrant_username`}} <wait>",
        "passwd/username={{user `vagrant_username`}} <wait>",
        "passwd/user-password={{user `vagrant_password`}} <wait>",
        "passwd/user-password-again={{user `vagrant_password`}} <wait>",
        "keymap=us <wait>",
        "tasks=standard <wait>",
        "<enter> <wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "guest_os_type": "other3xlinux-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://debian-cd.debian.net/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.riken.jp/Linux/debian/debian/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.jp.debian.org/debian/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.jaist.ac.jp/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/cdimage/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/cdimage/archive/{{user `iso_path`}}/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "output_directory": "output/{{user `vm_name`}}-v{{user `box_version`}}-vmware",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "memsize": "{{user `mem_size`}}",
        "numvcpus": "2",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "nat",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE",
        "svga.vramSize": "33554432"
      },
      "http_directory": "../http",
      "headless": "{{user `headless`}}",
      "boot_command": [
        "<esc><wait>auto priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-stretch.cfg <wait>",
        "passwd/root-password={{user `root_password`}} <wait>",
        "passwd/root-password-again={{user `root_password`}} <wait>",
        "passwd/user-fullname={{user `vagrant_username`}} <wait>",
        "passwd/username={{user `vagrant_username`}} <wait>",
        "passwd/user-password={{user `vagrant_password`}} <wait>",
        "passwd/user-password-again={{user `vagrant_password`}} <wait>",
        "keymap=us <wait>",
        "tasks=standard <wait>",
        "<enter> <wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "name": "esxi-iso",
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "guest_os_type": "otherlinux-64",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_urls": [
        "./iso/{{user `iso_name`}}",
        "http://debian-cd.debian.net/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.riken.jp/Linux/debian/debian/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.jp.debian.org/debian/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://ftp.jaist.ac.jp/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/debian-cd/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/cdimage/{{user `iso_path`}}/{{user `iso_name`}}",
        "http://cdimage.debian.org/cdimage/archive/{{user `iso_path`}}/{{user `iso_name`}}"
      ],
      "ssh_username": "{{user `ssh_name`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant' | sudo -S sh 'shutdown.sh'; rm -f shutdown.sh",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "output_directory": "{{user `vm_name`}}-v{{user `box_version`}}",
      "vm_name": "{{user `vm_name`}}",
      "vmx_data": {
        "memsize": "{{user `mem_size`}}",
        "numvcpus": "2",
        "ethernet0.present": "TRUE",
        "ethernet0.connectionType": "bridged",
        "ethernet0.virtualDev": "e1000",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE",
        "svga.vramSize": "33554432"
      },
      "http_directory": "../http",
      "headless": "{{user `headless`}}",
      "boot_command": [
        "<esc><wait>auto priority=critical preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-stretch.cfg <wait>",
        "passwd/root-password={{user `root_password`}} <wait>",
        "passwd/root-password-again={{user `root_password`}} <wait>",
        "passwd/user-fullname={{user `vagrant_username`}} <wait>",
        "passwd/username={{user `vagrant_username`}} <wait>",
        "passwd/user-password={{user `vagrant_password`}} <wait>",
        "passwd/user-password-again={{user `vagrant_password`}} <wait>",
        "keymap=us <wait>",
        "tasks=standard <wait>",
        "<enter> <wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/base.sh",
        "../provisioners/vagrant.sh",
        "../provisioners/dwm.sh",
        "../provisioners/xrdp.sh"
      ],
      "environment_vars": [
        "VAGRANT_USERNAME={{user `vagrant_username`}}",
        "WGET=wget -O -",
        "XORG=xorg=1:7.7+19",
        "DWM=dwm=6.1-3",
        "STTERM=stterm=0.6-1",
        "SUCKLESS_TOOLS=suckless-tools=42-2",
        "ARANDR=arandr=0.1.9-2",
        "XRDP=xrdp=0.9.1-9"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "scripts": [
        "../provisioners/linux-headers.sh",
        "../provisioners/virtualbox.sh"
      ],
      "environment_vars": [
        "VBOX_VER={{user `virtualbox_version`}}",
        "INSTALL_DKMS=true",
        "VIRTUALBOX_WITH_XORG=1"
      ]
    },
    {
      "type": "shell",
      "only": ["vmware-iso", "esxi-iso"],
      "scripts": [
        "../provisioners/vmtools.sh"
      ],
      "environment_vars": [
        "XSERVER_XORG_VIDEO_VMWARE=xserver-xorg-video-vmware=1:13.2.1-1+b1",
        "XSERVER_XORG_INPUT_VMMOUSE=xserver-xorg-input-evdev=1:2.10.5-1",
	"OPEN_VM_TOOLS=open-vm-tools=2:10.1.5-5055683-4",
        "VMWARE_WITH_XORG=1"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso", "vmware-iso"],
      "scripts": [
        "../provisioners/disk_cleanup.sh"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "../provisioners/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-v{{user `box_version`}}-{{ .Provider }}.box"
    },
    {
      "type": "vagrant",
      "only": ["vmware-iso"],
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-v{{user `box_version`}}-{{ .Provider }}.box",
      "keep_input_artifact": true
    }
  ]
}
